import itertools
import string

# Función de fuerza bruta para contraseñas
def fuerza_bruta(password):
    caracteres = string.ascii_lowercase  # Usamos solo letras minúsculas
    longitud_password = len(password)
    
    # Iteramos por todas las combinaciones posibles de esa longitud
    for intento in itertools.product(caracteres, repeat=longitud_password):
        intento_str = ''.join(intento)
        if intento_str == password:
            return f"Contraseña encontrada: {intento_str}"

    return "No se encontró la contraseña."

# Ejemplo de uso
password_objetivo = "abc"  # La contraseña que queremos encontrar

# Ejecutamos la función de fuerza bruta
resultado = fuerza_bruta(password_objetivo)
print(resultado)
